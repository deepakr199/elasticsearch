# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /shop                       controllers.Application.index()
GET     /shop/items                 controllers.Application.getItems(searchText ?= "", sortBy ?= "inventory.stock_status", sortOrder ?= "desc", page ?= "0", categoryType ?="", filter ?="")
GET     /shop/brands                controllers.Application.getBrands(searchText ?= "", sortBy ?= "inventory.stock_status", sortOrder ?= "desc", categoryType ?="", filter ?="")
GET     /shop/lookup                controllers.Application.lookup(searchText: String, sortBy ?= "inventory.stock_status", sortOrder ?= "desc")
GET     /shop/categories            controllers.Application.getCategories(searchText ?= "", sortBy ?= "inventory.stock_status", sortOrder ?= "desc", categoryType ?="", filter ?="")
GET     /shop/producttypes          controllers.Application.getProductTypes(searchText ?= "", sortBy ?= "inventory.stock_status", sortOrder ?= "desc", categoryType ?="", filter ?="")
GET     /shop/newOnSaleImported     controllers.Application.getOnSaleNewImported(searchText ?= "", sortBy ?= "inventory.stock_status", sortOrder ?= "desc", categoryType ?="", filter ?="")

GET     /configure                  controllers.Application.configure()
GET     /configure/getCustomKeywords  controllers.Application.getCustomKeywords()
GET     /configure/addKeyword       controllers.Application.addKeyword(categoryFirst: String, categorySecond: String, condition: String, keyword: String)
GET     /configure/updateKeyword    controllers.Application.updateKeyword(categoryFirst: String, categorySecond: String, condition: String, id: String)
GET     /configure/deleteKeyword    controllers.Application.deleteKeyword(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


